<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cut_card_background"
    tools:context=".ResultActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="194dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_card">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#8E24AA" />
        </LinearLayout>

        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:text="class"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/BMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:gravity="center"
            android:text="class"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/calculate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="Calculate"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:ignore="MissingConstraints" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculate">

        <TextView
            android:id="@+id/tvbmivalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BMI Value"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="300dp"/>

        <TextView
            android:id="@+id/value1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Below 18.5"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"/>

        <TextView
            android:id="@+id/value2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18.5-24.9"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="90dp"/>
        <TextView
            android:id="@+id/value3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25-29.9"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"/>

        <TextView
            android:id="@+id/value4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Above 30"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="200dp"/>

        <TextView
            android:id="@+id/statusUnderweight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Underwight"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="286dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/statusNormalweight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Normal weight"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="286dp"
            android:layout_marginTop="90dp"/>

        <TextView
            android:id="@+id/statusOverweight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overweight"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="286dp"
            android:layout_marginTop="150dp"/>

        <TextView
            android:id="@+id/statusObese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obese"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="286dp"
            android:layout_marginTop="200dp"/>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>


